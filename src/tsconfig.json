{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "target": "es5",
    "types": [
      "node"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.e2e.js",
    "**/*.spec.js",
    "**/*.test.js",
    "**/__tests__/*.js",
    "**/*.d.ts",
    "**/*.e2e.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*.ts"
  ]
}
